 * Return the full URL to a jpoker.css file inside the theme directory. Or
 * inside the os_poker css subdirectory if it can't be found in the theme.
 */
function theme_poker_skin_css_url() {
  global $base_url, $user;
  $filename = 'jpoker.css';
  $theme = !empty($user->theme) && !empty($themes[$user->theme]->status) ? $user->theme : variable_get('theme_default', 'garland');
  $theme_css = drupal_get_path('theme', $theme) . '/' . $filename;
  if(file_exists($theme_css)) {
    $url = $base_url . '/' . $theme_css;
  }
  else {
    $url = $base_url . '/' . drupal_get_path('module', 'os_poker') . '/css/' . $filename;
  }
  return $url;
}

function _user_relationships_ui_unset_notifications(&$account) {
  global $user;

  //only do this for the active user
  if ($account->uid != $user->uid) {
    return;
  }

  //Collect user_relationships_ui's messages
  $relationships = user_relationships_load(array('requestee_id' => $account->uid, 'approved' => FALSE));
  $messages = array();
  foreach ($relationships as $relationship) {
    $messages[] = user_relationships_ui_get_message('pending', $relationship, array(
      '!pending_relationship_requests'  => l(t('pending relationship requests'), variable_get('user_relationships_requests_link', 'relationships/requests'))
    ));
  }

  if($messages) {
    //Ho crap, we have to do some cleanup...
    $notifications = drupal_get_messages('status', TRUE);
    $notifications = $notifications['status'] ? $notifications['status'] : array();
    foreach($notifications as $notification) {
      if(!in_array($notification, $messages)) {
        drupal_set_message($notification);
      }
    }
  }
}

/**
 * Set an overlay to display over the next rendered page.
 * 
 * Overlay are not interactive (thick)boxes, they will be displayed (centeter)
 * over the content without the option to close.
 *
 * @param <type> $content The (HTML) content of the overlay.
 * @param <type> $attributes The attributes of the DIV element that will contain $content
 * @param <type> $width The desired CSS width of this DIV element (default to '')
 * @param <type> $height The desired CSS height of this element (default to '');
 */
function os_poker_set_overlay($content, $attributes = array(), $width = '', $height = '') {
  $_SESSION['os_poker_overlay'] = array(
    'content' => $content,
    'width' => $width,
    'height' => $height,
    'attributes' => $attributes,
  );
}

function os_poker_get_overlay($clear = true) {
  $overlay = $_SESSION['os_poker_overlay'];
  if($clear) {
    unset($_SESSION['os_poker_overlay']);
  }
  return $overlay;
}

function theme_os_poker_overlay() {
  $overlay = os_poker_get_overlay();
  if($overlay) {
    drupal_add_css(drupal_get_path('module', 'os_poker').'/css/overlay.css', 'module');
    drupal_add_js(drupal_get_path('module', 'os_poker').'/js/os_poker.overlay.js', 'module');
    if($overlay['width']) {
      $overlay['attributes']['style'] .= ' width: ' . $overlay['width'] .';';
    }
    if($overlay['height']) {
      $overlay['attributes']['style'] .= ' height: ' . $overlay['height'] . ';';
    }
    if($overlay['attributes']['class']) {
      $overlay['attributes']['class'] .= 'content';
    }
    else {
      $overlay['attributes']['class'] = 'content';
    }
    return '<div id="os-poker-overlay-mask"></div><div id="os-poker-overlay"><div class="floater"></div><div '.drupal_attributes($overlay['attributes']).'>'.$overlay['content'].'</div></div>';
  }
  else {
    return '';
  }
}